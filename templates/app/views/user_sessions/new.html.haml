%h1
  Login
- semantic_form_for(@user_session, :html => {:class => 'validate'}) do |f|
  
  = f.error_messages
  %p
    = f.label :login
    %br
    = f.text_field :login
  
  %p
    = f.label :password
    %br
    = f.password_field :password

  %p
    = f.check_box :remember_me
    = f.label :remember_me
  
  %p
    = f.submit "Login"
